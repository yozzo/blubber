{
  "name": "blubber",
  "version": "0.0.1",
  "description": "Express JSON API Client CRUD framework",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ztolley/blubber.git"
  },
  "keywords": [
    "Express",
    "Crud",
    "JSON",
    "Framework"
  ],
  "author": "Zac Tolley <zac@thetolleys.com> (https://github.com/ztolley)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ztolley/blubber/issues"
  },
  "homepage": "https://github.com/ztolley/blubber#readme",
  "xo": {
    "space": true,
    "prettier": true,
    "esnext": true,
    "semicolon": false,
    "globals": [
      "beforeEach",
      "describe",
      "test",
      "expect",
      "jest",
      "it"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "lint-staged": "^7.2.0",
    "xo": "^0.21.1"
  }
}
